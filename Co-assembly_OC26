#Step 2: Trimming and QC

#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=10:00:00
#SBATCH --mem=200G


module load sickle/1.33-foss-2019b

sickle pe -c /scratch/rck80079/OC26_Co-assembly/01_Interleaving/AT18-02_Sed_MUC19-8_16_combined.fastq -t sanger -m /scratch/rck80079/OC26_Co-assembly/02_QC/QC_AT18-02_Sed_MUC19-8_combined.fastq -s /scratch/rck80079/OC26_Co-assembly/02_QC/QC_AT18-02_Sed_MUC19-8_singles.fastq -n > /scratch/rck80079/OC26_Co-assembly/02_QC/logs/AT18-02_Sed_MUC19-8_output.log
