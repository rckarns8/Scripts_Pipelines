#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=100:00:00
#SBATCH --mem=100G
#SBATCH --cpus-per-task=8

cd /scratch/rck80079/OC26_Co-assembly/05_Mapping/

module load Bowtie2/2.4.1-GCC-8.3.0
module load anvio/6.1-intel-2019b-Python-3.7.4
module load SAMtools/1.10-GCC-8.3.0

for i in *.sam; do samtools view -bS -F 4 -@10  $i -o ${i%.sam}.bam; done
for i in *.bam; do anvi-init-bam $i -o ${i%.bam}-sorted.bam; done

rm *raw.sam *raw.bam










##############################Taxa assignments and import to anvioenv
###########MG-RAST

#Submit your assembled reads to MG-RAST, and download the Refseq assignments to reformat and import to Anvio for visualization.

#A script to reformat files from MG-RAST, based on required input from https://merenlab.org/2016/06/18/importing-taxonomy/#simple-matrix

#This will keep the first and last column from the MG-RAST refseq output.

cut -d$'\t' -f 2-12 '/c/Users/Rachael Karns/Desktop/Work/PhD/OC26 Paper/co-assemblies/Co-1/MG-RAST/mgm4922241.3.csv'  > file.out

#Now, you need to make headers that match the anvio example. you can make the headers in Excel, but you need to clean up the species data.

#Keeps only the first species assignment
sed -i 's/;.*//' file.out

#Removes brackets
 sed -i 's/[][]//g' file.out
