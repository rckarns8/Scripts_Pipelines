#Step 2: Trimming and QC

#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=10:00:00
#SBATCH --mem=200G


module load sickle/1.33-foss-2019b

sickle pe -c /scratch/rck80079/OC26_Co-assembly/01_Interleaving/EN510_Sed_33_combined.fastq -t sanger -m /scratch/rck80079/OC26_Co-assembly/02_QC/QC_EN510_Sed_33_OC26_combined.fastq -s /scratch/rck80079/OC26_Co-assembly/02_QC/QC_EN510_Sed_33_OC26_singles.fastq -n > /scratch/rck80079/OC26_Co-assembly/02_QC/logs/EN510_Sed_33_OC26_output.log
