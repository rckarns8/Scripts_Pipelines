#################################################################################################################################################################################################################################
#Step 3: Convert fastq to fasta
#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=100:00:00
#SBATCH --mem=200G
#SBATCH --nodes=4

cd /scratch/rck80079/OC26_Co-assembly/01_Interleaving/

for i in $(ls *.fastq);
do
cat $i | paste - - - - | sed 's/^@/>/'| cut -f1-2 | tr '\t' '\n' > ${i%.fastq}.fasta
done



#################################################################################################################################################################################################################################
#Step 4: Assembly
#First, combine fastas of the samples you wish to co-assemble, then map the individual samples to this co-assembly.

cd /scratch/rck80079/OC26_Co-assembly/01_Interleaving/

cat AT26-13_Sed_42_OC26_combined.fasta EN510_Sed_33_combined.fasta EN527_Sed_44_combined.fasta EN559_Sed_167_combined.fasta AT18-02_Sed_MUC19-8_0-3_combined.fasta PE1031_Sed_53_combined.fasta EN586_Sed_64_combined.fasta PE1031_Sed_95_combined.fasta EN600_Sed_73_combined.fasta OC468-2_Sed_C82_combined.fasta > co-assembly_1.fasta
cat PE1031_Sed_53_combined.fasta PE1031_Sed_95_combined.fasta AT26-13_Sed_43_combined.fasta OC468-2_Sed_C83_combined.fasta EN600_Sed_74_combined.fasta EN586_Sed_65_combined.fasta EN496_Sed_117_combined.fasta EN510_Sed_34_combined.fasta EN527_Sed_45_combined.fasta EN559_Sed_168_combined.fasta > co-assembly_2.fasta
cat AT26-13_Sed_48_combined.fasta EN496_Sed_122_combined.fasta EN510_Sed_39_combined.fasta OC468-2_Sed_C93_combined.fasta EN527_Sed_50_combined.fasta OC468-2_Sed_C86_combined.fasta EN559_Sed_174_combined.fasta EN586_Sed_70_combined.fasta EN600_Sed_79_combined.fasta > co-assembly_3.fasta






#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=100:00:00
#SBATCH --mem=200G

cd /scratch/rck80079/OC26_Co-assembly/01_Interleaving/



module load GCC/6.4.0-2.28


/home/rck80079/src/idba/idba-1.1.3/bin/idba_ud -r co-assembly_1.fasta -o /scratch/rck80079/OC26_Co-assembly/03_Assembly/co-1 --pre_correction --mink 65 --maxk 115 --step 10 --seed_kmer 55



/home/rck80079/src/idba/idba-1.1.3/bin/idba_ud  -r co-assembly_2.fasta -o /scratch/rck80079/OC26_Co-assembly/03_Assembly/co-2 --pre_correction --mink 65 --maxk 115 --step 10 --seed_kmer 55 –num_threads 16

/home/rck80079/src/idba/idba-1.1.3/bin/idba_ud  -r co-assembly_3.fasta  -o /scratch/rck80079/OC26_Co-assembly/03_Assembly/co-3 --pre_correction --mink 65 --maxk 115 --step 10 --seed_kmer 55 –num_threads 16





cd /home/rck80079/src/idba/idba-1.1.3/src/sequence/
nano short_sequence.h
cd /home/rck80079/src/idba/idba-1.1.3/
