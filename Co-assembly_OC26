#################################################################################################################################################################################################################################
#Step 3: Convert fastq to fasta
#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=100:00:00
#SBATCH --mem=200G
#SBATCH --nodes=4

cd /scratch/rck80079/OC26_Co-assembly/02_QC/

for i in $(ls *.fastq);
do
cat $i | paste - - - - | sed 's/^@/>/'| cut -f1-2 | tr '\t' '\n' > ${i%.fastq}.fasta
done



#################################################################################################################################################################################################################################
#Step 4: Assembly
#First, combine fastas of the samples you wish to co-assemble, then map the individual samples to this co-assembly.

#!/bin/bash
#SBATCH --partition=joye_p
#SBATCH --job-name=Co-assemble
#SBATCH --ntasks=1
#SBATCH --time=100:00:00
#SBATCH --mem=200G
cd /scratch/rck80079/OC26_Co-assembly/02_QC/fa

cat QC_PE1031_Sed_54_OC26_combined.fasta QC_PE1031_Sed_96_OC26_combined.fasta QC_AT26-13_Sed_48_OC26_combined.fasta QC_EN496_Sed_122_OC26_combined.fasta QC_EN510_Sed_39_OC26_combined.fasta QC_OC468-2_Sed_C93_OC26_combined.fasta QC_EN527_Sed_50_OC26_combined.fasta QC_OC468-2_Sed_C86_STE25_combined.fasta QC_EN559_Sed_174_OC26_combined.fasta QC_EN586_Sed_70_OC26_combined.fasta QC_EN600_Sed_79_OC26_combined.fasta QC_AT18-02_Sed_MUC19-8_combined.fasta > co-assembly_3.fasta


cat QC_OC468-2_Sed_C89_OC26_combined.fasta QC_AT26-13_Sed_42_OC26_combined.fasta QC_EN510_Sed_33_OC26_combined.fasta QC_EN527_Sed_44_OC26_combined.fasta QC_EN559_Sed_167_OC26_combined.fasta QC_AT18-02_Sed_MUC19-8_0-3_combined.fasta QC_PE1031_Sed_53_OC26_combined.fasta QC_EN586_Sed_64_OC26_combined.fasta QC_PE1031_Sed_95_OC26_combined.fasta QC_EN600_Sed_73_OC26_combined.fasta QC_OC468-2_Sed_C82_STE25_combined.fasta > co-assembly_1.fasta
cat QC_PE1031_Sed_53_OC26_combined.fasta QC_PE1031_Sed_95_OC26_combined.fasta QC_AT26-13_Sed_43_OC26_combined.fasta QC_OC468-2_Sed_C83_STE25_combined.fasta QC_EN600_Sed_74_OC26_combined.fasta QC_EN586_Sed_65_OC26_combined.fasta QC_EN496_Sed_117_OC26_combined.fasta QC_EN510_Sed_34_OC26_combined.fasta QC_EN527_Sed_45_OC26_combined.fasta QC_EN559_Sed_168_OC26_combined.fasta > co-assembly_2.fasta






