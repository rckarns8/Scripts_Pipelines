anvi-script-reformat-fasta ./03_Assembly/co-3/contig.fa -o ./04_CONTIGS/co-3.fa --min-len 2000 --simplify-names --report name_conversions3.txt


anvi-script-reformat-fasta ./03_Assembly/co-1/1contig.fa -o ./04_CONTIGS/co-1.fa --min-len 2000 --simplify-names --report name_conversions1.txt
anvi-script-reformat-fasta ./03_Assembly/co-2/contig.fa -o ./04_CONTIGS/co-2.fa --min-len 2000 --simplify-names --report name_conversions2.txt


